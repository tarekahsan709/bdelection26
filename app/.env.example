# Site URL (used for SEO, sitemap, etc.)
NEXT_PUBLIC_SITE_URL="https://bangladesh-election.up.railway.app"

# Development banner (set to "true" to show beta banner)
NEXT_PUBLIC_SHOW_DEV_BANNER="false"

# Logging (for development)
NEXT_PUBLIC_SHOW_LOGGER="false"

# Redis URL for vote storage
# REDIS_URL="redis://localhost:6379"

# Cloudflare Turnstile CAPTCHA
# Get keys from: https://dash.cloudflare.com/?to=/:account/turnstile
# Test keys (always pass): Site=1x00000000000000000000AA, Secret=1x0000000000000000000000000000000AA
NEXT_PUBLIC_TURNSTILE_SITE_KEY="1x00000000000000000000AA"
TURNSTILE_SECRET_KEY="1x0000000000000000000000000000000AA"

# YouTube Data API v3 (for Meme Pulse video feed)
